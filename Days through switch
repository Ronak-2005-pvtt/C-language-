#include <stdio.h>

int main() {
    int day;
    printf("Enter day number");
    scanf("%d",&day);
    
    switch(day)
    {
        Case1:
              printf("Monday");
              break;
        Case2:
              printf("Tuesdsy");
              break;
        Case3:
              printf("Wednesday");
              break;
        Case4:
              printf("Thursday");
              break;
        Case5:   
              printf("Friday");
              break;
        Case6:
              printf("Satday");
              break;
        Case7:
              printf("Sunday");
              break;
        Default:
              printf("Invalid day");
    }
    return 0;
}    
